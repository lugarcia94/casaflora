.visible__ony-category
    display: none

    @media(max-width: 992px)
        display: block
        margin-bottom 15px

    .help__div
        margin-top 30px
        padding: 0 15px
        

        h3
            font-weight: 500
            font-size: 28px
            line-height: 28px
            text-align: center
            color: #4F4F4F      

        p
            font-weight: 500
            font-size: 13px
            line-height: 17px
            text-align: center
            color: #828282    
            margin-top 15px

        ul
            display: flex
            justify-content: space-between
            align-items: center
            margin: 20px 0

            li
                width 45%
                &:first-child
                    a
                        &:before
                            font-icon: url('./svg/quest.svg')
                            font-size: 30px
                            color: #CFB486      
                            margin-right 5px       
                &:nth-child(2)
                    a
                        &:before
                            font-icon: url('./svg/atendimento.svg')
                            font-size: 30px
                            color: #CFB486     
                            margin-right 5px                             
                a
                    border: 2px solid #CFB486
                    border-radius: 5px
                    color: #A7916B
                    font-size: 13px
                    font-weight: 700
                    text-transform: uppercase
                    height 60px
                    display: flex
                    align-items: center
                    justify-content: center 


            @media(max-width : 991px)
                flex-wrap: wrap

                li
                    width 100%
                    margin: 5px 0
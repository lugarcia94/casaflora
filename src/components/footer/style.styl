.footer     
    background: #FFFBEB
    .category &
        margin-top      : 20px

    &__container
        { container } 
        display             : flex
        justify-content     : space-between
        flex-wrap           : wrap

    &__nav
        display         : inline-block
        vertical-align  : top 
        padding-top     : 25px
        @media(max-width : 475px)
            flex: 1 1 100%
            text-align: center

        .head-nav__link
            display: none
        .head-nav__sub
            position: static
            transform: none
            opacity: 1
            visibility: visible
            box-shadow: none
            padding: 0
            &:before, &:after
                display: none
        &--social
            .contact-item_call, .contact-item_tel, .contact-item_wts, .contact-item_mail,
            .contact-item_time
                display: none
            .contact-item_social
                font-size: 0px
                padding: 0
                line-height: 0px
            .contact-item_social-list
                @media(max-width : 475px)
                    justify-content: center
            
        .contact
            @media(max-width : 475px)
                justify-content: center
                span
                    justify-content: center
                    text-align: center

        &--contact
            .contact-item_call, .contact-item_social
                display: none

    &__title
        display         : block
        font-size       : 15px
        line-height     : 18px 
        font-weight     : 700
        color           : #CFB486
        margin-bottom   : 8px 
        text-transform: uppercase

 
@media screen and (min-width: 992px)
    .footer
 
        &__nav
            &--payment
                max-width       : 345px

            &--security
                max-width       : 215px

.nav__container 
    display: flex
    justify-content: space-between
    width: 100%
    flex-wrap: wrap 
    padding-bottom: 30px

    .footer__nav-list
        li  
            a  
                font-size: 13px
                line-height: 19px
                font-weight: 300
                color: #8B8A8A
                transition: all 150ms ease-in-out

                &:hover
                    text-decoration: none 
                    color: color[0]

.payment 
    .footer__title 
        margin-bottom: 5px

.security
    &__list
        img 
            max-width: 80px
ul.footer__nav-list ul li 
    font-weight: bold;
    font-size: 14px;
    text-transform: uppercase;
    color: #4F4F4F;
    margin-bottom: 15px;
    a
        font-weight: bold!important
        font-size: 14px!important
        text-transform: uppercase!important
        color: #4F4F4F!important
        margin-bottom: 15px!important

.footer__title + img 
    margin: 15px 0


ul.social__conect 
    display: flex
    align-items: center
    
    li
        margin-right 15px

ul.footer__nav-list p 
    font-size: 14px
    color: #4F4F4F
    line-height: 20px
    margin: 15px 0
        
        
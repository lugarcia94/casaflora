.minibanner
    text-align: center 
    background: #333333
    padding: 50px 0

    

    h2
        font-weight: 500;
        font-size: 28px;
        line-height: 30px; 
        text-align: center   
        color: #fff 

    >a
        font-weight: bold
        font-size: 14px
        text-transform: uppercase
        line-height: 40px
        color: #FF4F00
        display: flex
        align-items: center
        justify-content: center

        &:after
            content: ''
            background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAQCAMAAAARSr4IAAAAJFBMVEUAAAD/UAD/UAD/SgD/UAD/TAD/UAD/TwD/TwD/TwD/TwD/TwDlbkdBAAAAC3RSTlMAECAwMFBQv8/f78SDPS8AAAA3SURBVHjance5AYAwDANA2bxC+88L5E9aX3coNsPk0D3fuN5DZ/dIFzQjvNkpOhq7Y8ORNjnrPjWYAqXXtA8TAAAAAElFTkSuQmCC')
            width 15px
            height 15px
            display: block
            margin-left 5px

    .minibanner__category
        display: flex
        align-items: center
        max-width 1320px
        padding: 0 15px
        justify-content: center
        margin: 30px auto

        @media(max-width : 991px)
            flex-wrap: wrap
            

            .box-banner
                width 30%
                min-width: 0
                margin-bottom 15px

    @media(max-width : 991px)
        padding: 30px 0
        .slick-dots
            margin: 0 auto
            margin-top: 38px

    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        display: flex
        align-items: center
        justify-content: space-between 
        padding-bottom: 30px
    .box-banner
        overflow hidden
        min-width: 141px
    img
        display block
        margin: 0 auto
        transition: all .3s
        &:hover
            transform: scale(1.05)
    .box-banner
        padding: 0 5px

section.minibanner__full 
    width: 100%
    text-align: center

section.minibanner-inst 
    text-align: center
    margin: 30px 0

.minibanner-mid
    background: #CAD7CB
    padding: 30px
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        display: flex
        align-items: center
        justify-content: space-around
        @media(max-width : 767px)
            flex-wrap: wrap
    .box-banner
        padding: 5px
        overflow hidden
    img
        margin-left: auto
        transition: all .3s
        &:hover
            transform: scale(1.05)

.minibanner-down
    padding-bottom: 60px
    padding-top: 20px
    @media(max-width : 991px)
        padding: 38px 0
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        overflow hidden
        
    img
        transition: all .3s
        &:hover
            transform: scale(1.05)

.banner--full

    .slick-list
        margin: 0 auto

    .banner__container 
        display: flex 
        overflow: hidden
    
    .box-banner 
        flex: 0 0 100% 

    &-mobile 
        display: block

    @media(max-width : 991px)
        // img
        //     display: block
        //     position: relative
        //     width: auto
        //     min-width: 100%
        //     max-width: 220%
        //     left: 50%
        //     transform: translateX(-50%)
        .box-banner
            padding-bottom: 40px

        .slick-dots
            position: absolute
            bottom: 20px 
            left: 50%
            transform: translateX(-50%)

    @media (min-width: 992px) 
        display: block 

        &-mobile 
            display: none 




.banner--category
    margin: 10px 0 30px

    .slick-slide
        padding: 0!important
        
    .slick-arrow
        top: 50%
        transform: translateY(-50%)
        z-index 99
        background: transparent!important
        border-radius: 50%

    .slick-prev
        left 30px!important

    .slick-next
        right 30px!important

.banner--full-mobile 
    padding-bottom: 0
    .box-banner
        padding-bottom: 0

.visible__mobile
    @media(min-width: 992px)
        display: none

.visible__desktop
    @media(max-width: 991px)
        display: none

.bannerhtml1
    padding: 60px 0
    &-container
        display: flex
        justify-content: center
        max-width 1200px
        position relative
        margin: 0 auto

        @media(max-width: 991px)
            flex-wrap: wrap

    &-left
        position: absolute
        font-size: 60px
        font-family: 'Abril Fatface', cursive
        color: #fff
        line-height: 80px
        text-align: left
        text-transform: uppercase
        left 110px
        top 160px

        @media(max-width: 991px)
            position relative
            order: 2
            left 0
            top: 0
            font-size: 35px
            line-height: 50px
            width: 100%
            margin-left: 50px
            margin-top -50px

        strong
            font-size: 130px

            @media(max-width: 991px)
                font-size: 70px

    &-center
        @media(max-width: 991px)
            order: -1
            padding: 0 15px
    
    &-right
        position: absolute
        top: 0
        right 0
        width 100%
        height 100%

        @media(max-width: 991px)
            position relative
            order: 3
        p
            font-weight: 500;
            font-size: 24px;
            color: #fff;
            width 217px
            line-height: 30px;
            position: absolute
            right: 160px
            bottom: 130px
            text-align: left

            @media(max-width: 991px)
                position relative
                bottom: 0
                right 0
                margin-left 50px
                margin-top 30px

        a
            position: absolute
            bottom: 50px
            right 220px
            font-size: 16px
            letter-spacing: 1px;
            text-transform: uppercase;
            font-weight: bold;
            color: #FEF8E0;  
            display: flex
            align-items: center
            border: 1px solid #FEF8E0
            border-radius: 5px
            width 150px
            height 50px
            justify-content: center
            @media(max-width: 991px)
                position relative
                bottom: 0
                right 0
                margin-left 50px
                margin-top 30px
            &:after
                content: ''
                background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABMAAAAQCAMAAADDGrRQAAAAMFBMVEUAAAD/79//99/69N/799/89d/899/999/999//+OD/+OD++OD++OD++OD++eD++OCvfhw5AAAAD3RSTlMAECAwQFBggKCvv8/f7+/6mGr3AAAAOElEQVR42rXItQHAMAwEwDejpP2nDTNV8ZWHb6ma20XhRqnyiYyp5cpD2SNPEnGm63+Fci+4gFkPQpMDxUvq+GcAAAAASUVORK5CYII=')
                width 30px
                height 15px
                margin-left 10px
                display: block
                background-repeat: no-repeat
          

        img
            position: absolute
            top: -50px
            right: 90px
            @media(max-width: 991px)
                display: none

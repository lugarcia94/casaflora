.breadcrumb
    { container }
    display: flex
    align-items: center
    justify-content: space-between
    background: #FFFAF0
    padding: 10px 15px 

    a 
        font-weight: 500
        color: #828282
        font-size: 12px
        text-transform: uppercase
        line-height: 19px
        display: flex
        align-items: center
    ul 
        display                 : flex 
        justify-content         : flex-start 
        align-items             : center  
    li 
        display                 : flex  
        align-items             : center  
 
        &:not(:last-child):after 
            content             : ''  
            display             : inline-block 
            width 15px
            height 15px
            background-size: 13px
            background-position: center
            background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOCAMAAAAolt3jAAAAG1BMVEUAAACAgICAgICEhISCgoKBgYGCgoKCgoKCgoLLIeIwAAAACHRSTlMAMEBfcICv7zm/QVYAAAAqSURBVHjaY4AAJkYGZMDBwYzMZaWQz8bBjsRj5uBgJYfHgMpjYGFhwAYAcDMBCa6ozCwAAAAASUVORK5CYII=');
            margin: 0 5px
            background-repeat: no-repeat


        &:first-child 
            a 
                font-size       : 0 
                &:before 
                    content     : 'Home'
                    font-size   : 12px 
                    height 19px
                    display: block
        &.last 
            a 
                color           : #828282
                font-weight: 800

                &:hover
                    color: #CFB486

.share__social 
    margin-top: 15px
    display: flex
    align-items: center
    
    @media(max-width 991px)
        display: none

    &:before
        content: 'compartilhe:'
        font-size: 12px
        color: #453F3F
        margin-right: 5px

 
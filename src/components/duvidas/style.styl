  
#minha-fag
    padding-top 170px

.help
    display: block
    padding-bottom 60px

    &__container
        max-width 1150px
        padding: 0 15px
        margin: 0 auto
        width 100%

    &__top
        background: #FFFBEB
        padding: 45px 0

        .help
            &__container                        
                display : flex
                align-items: center

            &__left
                flex: 1
                padding: 10px

                > div
                    max-width 370px
                    margin-left: auto
            
                    span
                        font-size: 20px
                        line-height: 28px
                        color: #4F4F4F


            &__title
                display: block
                font-size: 25px
                line-height: normal
                color: #4F4F4F
                text-transform: uppercase
                margin-bottom 30px
                font-family: 'Abril Fatface', cursive

                span
                    display: block
                    font-size: 40px

            &__right
                flex: 0 0 650px

    &__middle
        @media(min-width : 992px)
            min-height: 95vh

        .help
            &__list
                position relative

            &__item
                display: flex
                align-content: center
                justify-content: space-between
                max-width 367px
                border-bottom: 2px solid #F0EADF;
                padding-right: 20px

                &--open
                    background: #FAF7EE
                       
                    .help
                        &__menu
                            opacity 1
                            visibility visible

            &__title
                position relative
                display: flex
                align-items: center
                width 100%
                font-size: 18px;
                line-height: normal;
                color: #4F4F4F;
                padding: 15px 0px 15px 15px

                svg
                    margin-right: 20px

                &:after
                    content: ''
                    position: absolute
                    top: 50%
                    right 0
                    display inline-block
                    width 20px
                    height 20px
                    background: url("data:image/png;base64,");
                    background-repeat: no-repeat
                    background-position: center
                    transition: all 300ms ease
                    transform: rotate(90deg) translateX(-50%)

            &__menu
                position: absolute
                top: 0
                right 0
                left 370px
                opacity 0
                visibility hidden

                &--item
                    background: #FAF7EE;
                    padding: 20px 20px 0

                &--content
                    display: none

                &--open
                    background: #F2F2F2;
                    padding: 20px

                    .help
                        &__menu
                            &--content
                                display block
                                margin: 30px 0

                                > div
                                    display: block
                                    margin-bottom 15px

                            &--title
                                display: block
                                font-weight: bold;
                                font-size: 16px;
                                line-height: 28px;
                                color: #A74238;

                            &--span
                                display: block

                                font-weight: normal;
                                font-size: 16px;
                                line-height: 24px;
                                color: #4F4F4F;

                        &__strong
                            border: 2px solid transparent

                            &:after
                                transform: rotate(0deg);

            &__strong
                font-weight: bold;
                font-size: 16px;
                line-height: normal
                color: #4F4F4F

                display: flex
                justify-content: space-between
                border-bottom: 2px solid #DBD7CE;
                padding-bottom: 20px

                &:after
                    content: ''
                    display inline-block
                    width 20px
                    height 15px
                    background: url("data:image/png;base64,");
                    background-repeat: no-repeat
                    transition: all 300ms ease
                    transform: rotate(180deg);

    &__bottom
        margin: 100px auto
        background: #F2F2F2;
        padding: 60px 50px 100px 
        @media (max-width : 991px)
            padding: 0 15px
        .help
            &__title
                display block
                font-weight: 500;
                font-size: 28px;
                line-height: normal
                text-align: center;
                color: #4F4F4F;
                margin-bottom: 30px
    
    &__apoio

        .help
            &__title
                display block
                font-weight: 500;
                font-size: 28px;
                line-height: normal
                text-align: center;
                color: #4F4F4F;
                margin-bottom 30px
        
        .apoio
            display: flex 
            align-items: stretch
            justify-content: space-between

            &__content
                border: 2px solid #CFB486;
                border-radius: 5px;
                flex 0 0 32.5%
                padding: 20px

            &__title
                
                font-weight: bold;
                font-size: 24px;
                line-height: 34px;
                color: #CFB486;

            &__phone
                display: block
                font-weight: bold;
                font-size: 20px;
                line-height: 34px;
                color: #4F4F4F;
                margin: 10px 40px 

            
            span
                display: inline-block
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                color: #4F4F4F;
                margin-left: 40px

                strong 
                    color: #CFB486

@media(max-width : 991px)
    .help
        &__middle 

            .help
                &__item
                    max-width 100%
                    margin 0px

                &__menu
                    position relative
                    left auto
                    height: 0px
                    width 100%

                &__item
                    flex-wrap: wrap
                    padding: 0px

                    &--open
                        .help
                            &__menu
                                height auto

                            &__title:after
                                content: ''
                                transform: rotate(0);                

                &__title
                    &:before 
                        position: absolute;
                        right 15px
                        top: 48%;
                        content: '';
                        display: block;
                        width: 15px;
                        height: 3px;
                        background: #4b5151;
                        transition: transform 0.2s ease-in, top 0.2s linear 0.2s;
                        transform: rotate(0);
                    
                    
                    &:after 
                        position: absolute;
                        right 15px
                        top: 48%;
                        content: '';
                        display: block;
                        width: 16px;
                        height: 3px;
                        background: #4b5151;
                        transition: transform 0.2s ease-in, top 0.2s linear 0.2s;
                        transform: rotate(90deg);



                &__strong
                    &:after
                        background-size: 16px

        &__apoio 
            .apoio        
                flex-wrap: wrap

                &__content
                    flex: 0 0 100%
                    padding: 15px
                    margin-bottom 15px

                span
                    margin-left: 0px

                    strong
                        font-size: 15px

                &__phone
                    margin 10px 0px
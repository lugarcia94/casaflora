.news-rulers
    margin-top: 20px

    .news-rulers__item.news
        width               : 100%
        { container }
        min-height          : 72px
        display             : flex
        align-items         : center
        @media(max-width: 768px)
            padding: 0
    .success
        font-size: 14px
        font-weight: regular
        color: #fff 

.newsletter
    max-width 410px
    
    .newsletter-title
        display: none


    #newsletterClientEmail, #newsletterClientName
        width               : 100%
        height              : 50px
        padding-left        : 10px
        max-width           : 335px
        border-radius       : 7px
        border              : none
        margin-right        : 20px
        background-color    : #ffffff
        border: 2px solid #CFB486;
        box-sizing: border-box;
        border-radius: 3px;
        font-size           : 15px
        font-weight: 700
        color               : #4F4F4F
        text-transform: uppercase
        text-align: center
        margin: 5px auto
        &:placeholder
            color: #4F4F4F

        @media(max-width: 845px)
            max-width       : 255px

        @media(max-width: 768px)
            width 100%
            max-width 100%
            margin-bottom: 18px
            margin-right: 0 

    #newsletterButtonOK
        background-image: url('data:image/jpeg;base64,')
        font-size: 0
        display: block
        width: 36px
        height: 34px
        border: none
        background-repeat: no-repeat
        position: absolute
        bottom: 0
        cursor pointer
        position: absolute
        bottom: 42px
        cursor: pointer
        right: 40px

        &:hover
            opacity: 0.8

        @media(max-width: 991px)
            bottom: 75px
            border: none

    &-title
        font-size           : 14px
        font-weight         : regular

    fieldset

        > p
            margin-bottom   : 10px
            font-size       : 0
            font-weight     : regular
            color           : color[0]

.news-rulers
    .newsletter
        &-title
            font-size           : 0
            display             : flex
            align-items         : center

            @media(max-width: 1170px)
                flex: 0 0 100%
                justify-content: center
                margin-top 15px

            &:after
                content         : 'receba novidades'
                font-size       : 29px
                line-height     : 34px 
                font-weight     : 300
                letter-spacing  : 0.3px
                color           : #ffffff

            &:before
                font-icon       : url('./svg/mail.svg')
                font-size       : 21px
                margin-right    : 5px
                color           : #fff

 
.news-rulers
    display             : flex
    align-items         : center
    padding-top         : 20px
    
.newsletter
    position            : relative
    background-image: url('http://casaflora.vtexlocal.com.br/arquivos/bgnews.png') 
    background-color: #D9D2C5
    border-radius: 5px
    max-width 406px
    width 100%
    padding: 30px
    background-color: #f2f2f2;
    border-radius: 5px;
    max-width: 406px;
    padding: 30px;
    width: 100%;
    
    

    &-title
        display         : inline-block

    fieldset
        display         : inline-block
        width           : 100%
        text-align: center

        @media(max-width: 1170px)
            margin: 20px 0!important
            width 100%!important

        > p
             font-size: 0

             &:after
                content: 'Acompanhe nossas novidades'
                font-weight: 500
                font-size: 15px
                color: #4F4F4F

            &:before
                content: ''
                background-image: url('data:image/png;base64,')
                width 60px
                height 60px
                display: block
                background-size: 55px
                background-repeat: no-repeat
                background-position: center
                margin: 5px auto

.banner__news
    display: flex
    justify-content: space-between
    align-items: center


    max-width 1100px
    padding: 0 15px
    margin: 0 auto            

    @media(max-width: 991px)
        flex-wrap: wrap
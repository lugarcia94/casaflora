.header__newmenu
    display: flex
    align-items: center
    justify-content: space-between
    max-width 1320px
    padding: 0 15px
    margin: 0 auto

    .header__newmenu--menu
        max-width 880px
        width 100%

        >ul
            display: flex
            justify-content: space-between
            width 100%

            li.has__child
                &:after
                    content: ''
                    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOCAMAAAAolt3jAAAAG1BMVEUAAABQUFBQUFBQUFBMTExOTk5PT09PT09PT0/Y1xSxAAAACHRSTlMAECAwQKDf7wLNULsAAAA0SURBVHjaYqAmABQdFwQAxDAQBEsB/4YfumG4mavS+Y7aRkv9S+Kfka6BW7iEURmVUdXkvU9QAQ6LMXSVAAAAAElFTkSuQmCC')
                    width 15px
                    height 15px
                    display: block
                    margin-left 5px

            >li
                display: flex
                align-items: center
                min-height: 45px

                &:last-child
                    a
                        color: #FF0808!important


                >a
                    font-size: 14px
                    color: #4F4F4F
                    font-weight: 700
                    line-height: 16px
                    text-transform: uppercase

                .newmenu__list-sub
                    display: none
                    position: absolute
                    top: 100%
                    width: 100%
                    left: 50%
                    max-width: 1320px
                    transform: translateX(-50%)
                    background: #FEFAF2
                    padding: 30px 70px

                    >.newmenu__list-nv2
                        li
                            >a
                                color: #A74238
                                font-size: 14px
                                font-weight: 500
                                text-transform: uppercase

                        .newmenu__list-nv3
                            li
                                a
                                    font-size: 14px
                                    color: #4F4F4F
                                    text-transform: uppercase

                &:hover
                    .newmenu__list-sub
                        display: flex 
                        justify-content: space-between

.header__newmenu
    &--right
        display: flex
        align-items: center
        width 85px
        justify-content: space-between

    &--account
        &:before
            display             : block
            content             : ''
            background          : svg-load('svg/account.svg')
            width               : 23px
            height              : 30px 
            color               : color[0] 
            background-repeat   : no-repeat
            background-size     : 100%  
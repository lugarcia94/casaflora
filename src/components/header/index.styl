    left: -70px;
    top: 0;
    background: #FF4F00;
    color: #fff;
    text-align: center;
    height: 70px;
    line-height: 70px;
    font-weight: 700;
    cursor pointer
    font-size: 25px;


 .header__newmenu .header__newmenu--menu >ul > .open__sub >.newmenu__list-sub
    display: block 

.minicart__container 
    display: none
        